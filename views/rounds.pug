extends layout

block content
  h1 #{title}
  p 
    a(href="/") Home
    |  > 
    a(href="/admin/rounds") Rounds

  a(href="/admin/add-round" class="btn btn-primary" style="margin: 30px 0px 50px 0px; float: right;") + Add New Round
  div.con-mid(style="width: 100%; overflow-x: auto;")
      table(class="table datatables" id="myTable")
        thead 
          tr
            th ID
            th Name
            th Start
            th End 
            th Google Form URL
            th Actions
        tbody
          each val in rounds
            tr
              td #{val.id}
              td(style="text-align: left;") #{val.name}
              td(style="text-align: left;") #{val.start}
              td(style="text-align: left;") #{val.end}
              td
                a.btn.btn-primary(href=val.link target="_blank") View Form
              td 
                form(action="/admin/del-round" method="post") 
                  input(type="hidden" value=val.id name="id") 
                  button(class="btn btn-danger" type="submit") Remove
      
  div(class="container" style="padding: 20px 10px 50px 10px;")
    div.legal(style="text-align: center;") Copyright ©2021 Star Party | Sri Lanka
      sup ®
          br
      |*A 
      a(href="https://en.wikipedia.org/wiki/Carbon_neutrality" target="_blank" style="text-decoration: none;")
        span.carbon-link carbon neutral 
